<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700" rel="stylesheet">
    <title>Ramayana - Free Bootstrap 4 CSS Template</title>
    <!-- Bootstrap core CSS -->
    <link href="~/Content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!--
    Ramayana CSS Template
    https://templatemo.com/tm-529-ramayana
    -->
<!--jQueryUI reference-->
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />


    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="~/Content/assets/css/fontawesome.css">
    <link rel="stylesheet" href="~/Content/assets/css/templatemo-style.css">
    <link rel="stylesheet" href="~/Content/assets/css/owl.css">

    <link href="~/Content/CustomStyles.css" rel="stylesheet" />
</head>

<body class="is-preload">
    <!-- Wrapper -->
    <div id="wrapper">
        <!-- Main -->
        <div id="main">
            <div class="inner">
                <!-- Header -->
                <header id="header">
                    <div class="logo">
                        <a href="@Url.Action("Index", "Home")">Home</a>
                    </div>
                </header>
                <div id="mainContent">
                    @RenderBody()
                </div>
            </div>

            <!-- Footer -->
            <footer id="footer">
                <div class="row">
                    <div class="col-md-3 text-center">
                        @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "btn btn-outline-primary" })
                    </div>
                    <div class="copyright col-md-6">
                        Copyright &copy; @DateTime.Now.Year
                        <br>Designed by <a rel="nofollow" href="https://www.facebook.com/templatemo">Template Mo</a>
                    </div>
                </div>
            </footer>

        </div>

        <!-- Sidebar -->
        @if (User.Identity.IsAuthenticated)
        {
            <div id="sidebar">
                <div class="inner">
                    <!-- Menu -->
                    <nav id="menu">
                        <ul>
                            <li><a href="@Url.Action("Index", "Home")">Homepage</a></li>
                            @if (User.IsInRole("Admin"))
                            {
                                @* Courses *@
                                <li>
                                    <span class="opener">Courses</span>
                                    <ul>
                                        <li><a href=@Url.Action("Active", "Courses")>Active</a></li>
                                        <li><a href=@Url.Action("Retired", "Courses")>Retired</a></li>
                                    </ul>
                                </li>
                                @* Students Statuses *@
                                <li>
                                    <a href="@Url.Action("Index", "StudentStatus")">Student Status</a>
                                </li>
                            }
                            @* Enrollment *@
                            <li>
                                <a href="@Url.Action("Index", "Enrollments")">Enrollment</a>
                            </li>
                            @* Scheduled Classes *@
                            <li>
                                <a href="@Url.Action("Index", "ScheduledClasses")">Scheduled Classes</a>
                            </li>
                            @* Students *@
                            <li>
                                <a href="@Url.Action("Index", "Students")">Students</a>
                            </li>
                            @if (User.IsInRole("Admin"))
                            {
                                @* Admin *@
                                <li>
                                    <span class="opener">Admin</span>
                                    <ul>
                                        <li><a href="@Url.Action("Index", "RolesAdmin")">Roles Admin</a></li>
                                        <li><a href="@Url.Action("Index", "UsersAdmin")">Users Admin</a></li>
                                    </ul>
                                </li>
                            }
                            <li>@Html.Partial("_LoginPartial")</li>
                        </ul>
                    </nav>

                </div>
            </div>
        }
    </div>

    <!-- Scripts -->
    <!-- Bootstrap core JavaScript -->
    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/assets/js/browser.min.js"></script>
    <script src="~/Content/assets/js/breakpoints.min.js"></script>
    <script src="~/Content/assets/js/transition.js"></script>
    <script src="~/Content/assets/js/owl-carousel.js"></script>
    <script src="~/Content/assets/js/custom.js"></script>

    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>


    @RenderSection("scripts", required: false)

</body>

</html>
